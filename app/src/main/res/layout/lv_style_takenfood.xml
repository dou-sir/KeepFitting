<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/iv_item_takenFood_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/food0"
            android:layout_marginLeft="30dp">
        </ImageView>
        <TextView
            android:id="@+id/tv_item_takenFood_name"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="乳酸菌面包"
            android:textSize="30dp"
            android:textColor="#0097ff"
            android:layout_toRightOf="@id/iv_item_takenFood_img"
            android:layout_marginLeft="30dp"></TextView>
        <TextView
            android:id="@+id/tv_item_takenFood_weight"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="116"
            android:textSize="23dp"
            android:textColor="#000000"
            android:layout_below="@id/tv_item_takenFood_name"
            android:layout_toRightOf="@id/iv_item_takenFood_img"
            android:layout_marginLeft="30dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="克"
            android:textSize="22dp"
            android:layout_below="@id/tv_item_takenFood_name"
            android:layout_toRightOf="@id/tv_item_takenFood_weight">
        </TextView>
        <TextView
            android:id="@+id/tv_item_takenFood_cal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_item_takenFood_weight"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="100"
            android:textSize="30dp"
            android:textColor="#ff5f3e"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_item_takenFood_cal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:text="千卡"
            android:textSize="30dp"></TextView>

    </RelativeLayout>

</LinearLayout>
