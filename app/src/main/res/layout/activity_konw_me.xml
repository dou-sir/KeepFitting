<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.keepfitting.jit.keepfitting.KonwMeActivity">


    <TextView
        android:id="@+id/tv_knowme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="一分钟彻底了解自己"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tv_bmi"
        android:layout_below="@id/tv_knowme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的身体质量指数（BMI）为："
        android:textStyle="bold"
        android:textSize="15dp"/>




    <TextView
        android:id="@+id/tv_jieshao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_bmi"
        android:text="
"

        />


    <TextView
        android:id="@+id/tv_fanwei"
        android:layout_below="@id/tv_jieshao1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的健康体重范围为："
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_tizhong"
        android:layout_below="@id/tv_fanwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的年龄身高对应标准体重为："
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tv_reliang"
        android:layout_below="@id/tv_tizhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的每天所需的热量："
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/jieshao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_reliang"
        android:text="         在活动强度不变情况下消耗的最低热量\n
        当摄入小于支出时体重下降\n
        当摄入大于支出时体重增加"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_xinlv"
        android:layout_below="@id/jieshao2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中强度运动心率"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_xinlv"
        android:singleLine = "false"
        android:text="          燃烧脂肪需要满足三个必要条件\n
        1 该运动要达到中低强度的运动心率；\n
        2 这种中低强度运动心率的运动要持续20分钟以上；\n
        3 这种运动必须是大肌肉群的运动，如慢跑 游泳 健身操等\n
        低于或高于这个心率都不是中强度运动心率，燃烧的也就不是脂肪了
"/>




</RelativeLayout>
