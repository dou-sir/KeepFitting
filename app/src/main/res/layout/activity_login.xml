<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keepfitting.jit.keepfitting.LoginActivity">


    <com.keepfitting.jit.keepfitting.CustomVideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <EditText
        android:id="@+id/et_login_phonenumber"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/bt_login_sendmessage"
        android:layout_alignStart="@+id/et_login_password"

        android:background="@drawable/translucenttext"
        android:gravity="center_horizontal"
        android:hint="请输入手机号"
        android:textColor="#fefefe" />

    <Button
        android:id="@+id/bt_login_sendmessage"
        android:layout_width="100dp"
        android:layout_height="45dp"

        android:layout_alignEnd="@+id/et_login_password"
        android:layout_centerVertical="true"
        android:background="@drawable/translucentbutton"
        android:text="发送验证码" />
    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_login_phonenumber"
        android:layout_marginTop="25dp"
        android:background="@drawable/translucenttext"
        android:gravity="center_horizontal"
        android:hint="请输入密码或验证码"
        android:inputType="textPassword"
        android:textColor="#fefefe" />
    <Button
        android:id="@+id/bt_login_verify"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/translucentbutton"
        android:text="登录"

        android:textStyle="normal"

        />






</RelativeLayout>
