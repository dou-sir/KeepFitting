<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keepfitting.jit.keepfitting.GoalDetailsActivity"
    android:orientation="vertical"
    android:background="@drawable/detailbackground">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划类型:"
            android:textSize="20dp"
            android:textColor="#da1b1b"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0b0a0a"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起始数据："
            android:textSize="20dp"
            android:textColor="#da1b1b"/>
        <EditText
            android:id="@+id/et_startData"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#0b0a0a"
            />
        <TextView
            android:id="@+id/tv_zhushi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目标数据："
            android:textSize="20dp"
            android:textColor="#da1b1b"/>
        <EditText
            android:id="@+id/et_goalData"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#0b0a0a"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："
            android:textSize="20dp"
            android:textColor="#da1b1b"/>
        <TextView
            android:id="@+id/et_startTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#0b0a0a"
            />
        <Button
            android:id="@+id/bu_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择日期"
            />





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："
            android:textSize="20dp"
            android:textColor="#da1b1b"/>
        <TextView
            android:id="@+id/et_endTime"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#0b0a0a"
            />
        <Button
            android:id="@+id/bu_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择日期"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textSize="20dp"
            android:textColor="#da1b1b"/>
        <EditText
            android:id="@+id/et_goalDescribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0b0a0a"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/bu_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改"
            />
        <Button
            android:id="@+id/bu_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            />
    </LinearLayout>

</LinearLayout>
