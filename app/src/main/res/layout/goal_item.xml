<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划类型:"
            android:textSize="20dp"
            android:textColor="#0d0c0c"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="减肥"
            android:textColor="#e61111"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起始数据："/>
        <TextView
            android:id="@+id/tv_startData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80kg"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目标数据："/>
        <TextView
            android:id="@+id/tv_goalData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70kg"
            android:textColor="#e61111"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："/>
        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.6.20"/>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："/>
        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.7.30"
            android:textColor="#e61111"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："/>
        <TextView
            android:id="@+id/tv_goalDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未完成"
            android:layout_marginRight="200dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textColor="#e60be2"/>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right">



            <Button
                android:id="@+id/bu_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认完成"
                android:focusable="false"

                />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
