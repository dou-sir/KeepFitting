<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:id="@+id/ll_showSport_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2EB7F4">
        <ImageView
            android:id="@+id/iv_showSport_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/showfood_back"
            android:onClick="goBack">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动列表"
            android:textSize="24dp"
            android:textColor="#9C14B3"
            android:layout_marginLeft="120dp"></TextView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">
            <TextView
                android:id="@+id/tv_show_sport_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="20dp"
                android:textColor="#000"
                android:padding="8dp"
                android:onClick="AddDoneSport"
                ></TextView>
            <TextView
                android:id="@+id/tv_show_sport_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:text="10"
                android:textSize="15dp"
                android:background="#FF0000"
                android:textColor="@android:color/white"
                ></TextView>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_showSport_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_showSport_top"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_showSport_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/showfood_search"
            android:scaleType="fitXY"
            android:layout_marginLeft="50dp"
            ></ImageView>
        <EditText
            android:id="@+id/ed_showSport_search"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请输入运动名称"></EditText>
        <Button
            android:id="@+id/btn_showSport_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:onClick="SearchSport"
            ></Button>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_showSport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_showSport_search">
    </ListView>
</RelativeLayout>