<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/iv_item_food_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/food0"
            android:layout_marginLeft="30dp">
        </ImageView>
        <TextView
            android:id="@+id/tv_item_food_name"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="米饭"
            android:textSize="25dp"
            android:textColor="#0097ff"
            android:layout_toRightOf="@id/iv_item_food_img"
            android:layout_marginLeft="50dp"></TextView>
        <TextView
            android:id="@+id/tv_item_food_cal"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="116"
            android:textSize="23dp"
            android:textColor="#ff5f3e"
            android:layout_below="@id/tv_item_food_name"
            android:layout_toRightOf="@id/iv_item_food_img"
            android:layout_marginLeft="50dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="千卡/100克"
            android:textSize="22dp"
            android:layout_below="@id/tv_item_food_name"
            android:layout_toRightOf="@id/tv_item_food_cal">
        </TextView>

        <ImageView
            android:id="@+id/iv_showFood_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/showfood_add"
            android:scaleType="fitXY"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="20dp"></ImageView>

    </RelativeLayout>

</LinearLayout>
